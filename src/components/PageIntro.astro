---
const { pageHeader, pageDescription, imageSource, imageAltText } = Astro.props;
---

<section  class="grid lg:grid-cols-3 lg:gap-16 md:mb-32 sm:mb-16">

<div class="order-last lg:order-first mx-auto max-w-md">
<img src={imageSource} alt={imageAltText}></div>

<div class="lg:col-span-2 p-4 lg:p-0">
<h1 class="text-7xl md:text-8xl font-extrabold pb-2 text-[#eb440f]">{pageHeader}</h1>
<h2 class="text-lg">{pageDescription}</h2>
 <slot />
</div>

</section>