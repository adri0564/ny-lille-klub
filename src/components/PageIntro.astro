---
const { pageHeader, pageDescription, imageSource, imageAltText } = Astro.props;
---

<section  class="grid lg:grid-cols-3 lg:gap-16  h-screen">

<div class="order-last lg:order-first mx-auto">
<img src={imageSource} alt={imageAltText}></div>

<div class="lg:col-span-2 p-4 lg:p-0">
<h1 class="text-7xl md:text-8xl font-extrabold pb-2 text-[#eb440f]">{pageHeader}</h1>
<h2 class="text-lg">{pageDescription}</h2>
 <slot />
</div>

</section>

<style>
    .grid {
  position: relative;
}

.grid > * {
  opacity: 0;
  transform: translateY(80px);
  transition: opacity 0.4s ease-in-out, transform 0.4s ease-in-out;
}

.grid > *:nth-child(1) { transition-delay: 0.2s; }
.grid > *:nth-child(2) { transition-delay: 0.4s; }
.grid > *:nth-child(3) { transition-delay: 0.6s; }
/* Add more nth-child styles as needed */

</style>

<script>

document.addEventListener("DOMContentLoaded", function() {
  var gridItems = document.querySelectorAll('.grid > *');

  gridItems.forEach(function(item) {
    item.style.opacity = 1;
    item.style.transform = 'translateY(0)';
  });
});


</script>