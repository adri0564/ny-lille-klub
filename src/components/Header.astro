<!-- CSS HAMBURGER MENU CSS HAMBURGER MENU CSS HAMBURGER MENU -->
<style>
    /* HAMBURGER MENU */

    
.hamburger {
  position: relative;
  
  width: 48px;
  height: auto;
  cursor: pointer;
  appearance: none;
  background: none;
  outline: none;
  border: none;
  z-index: 100;
}

.hamburger .bar,
.hamburger:after,
.hamburger:before {
  content: "";
  display: block;
  width: 100%;
  height: 4px;
  background-color: rgb(0, 0, 0);
  margin: 8px 0px;
  transition: 0.4s;
}

.hamburger_menu {
  position: fixed;
  top: 0;
  left: 100%;
  width: 100%;
  min-height: 100vh;
  display: block;
  z-index: 98;
  /* background-color: blueviolet; */
  padding-top: 160px;
  transition: 0.4s;
}

.hamburger_menu a {
  display: block;
  width: 100%;
  margin: 0 auto 16px;
  text-align: center;
  padding: 8px 16px;
}

.hamburger_menu.is-active {
  left: 0;
}

/* BURGER KLIK ANIMATION */
.hamburger.is-active:after {
  transform: rotate(45deg) translate(-6px, -7px);
}

.hamburger.is-active:before {
  transform: rotate(-45deg) translate(-10px, 11px);
}

.hamburger.is-active .bar {
  opacity: 0;
}
</style>


<!-- JS HAMBURGER MENU JS HAMBURGER MENU JS HAMBURGER MENU -->
<script>
    // BURGER MENU
window.onload = function () {
  const menu_btn = document.querySelector(".hamburger");
  const hamburger_menu = document.querySelector(".hamburger_menu");

  menu_btn.addEventListener("click", function () {
    menu_btn.classList.toggle("is-active");
    hamburger_menu.classList.toggle("is-active");
  });
};

</script>